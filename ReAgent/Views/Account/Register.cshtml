@model ReAgent.Models.Views.Account.RegisterVM
@{
    ViewBag.Title = "Регистрация";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="loginForm" style="max-width: 300px;">
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "formPlain" }))
    {
        @Html.AntiForgeryToken()

        <div class="input">
            @Html.LabelFor(m => m.FirstName)<br />
            @Html.TextBoxFor(m => m.FirstName, new { @class = "formControl sm" })
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>

        <div class="input">
            @Html.LabelFor(m => m.LastName)<br />
            @Html.TextBoxFor(m => m.LastName, new { @class = "formControl sm" })
            @Html.ValidationMessageFor(m => m.LastName)
        </div>

        <div class="input">
            @Html.LabelFor(m => m.Email)<br />
            @Html.TextBoxFor(m => m.Email, new { @class = "formControl sm" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="input">
            @Html.LabelFor(m => m.Phone)<br />
            @Html.TextBoxFor(m => m.Phone, new { @class = "formControl sm" })
            @Html.ValidationMessageFor(m => m.Phone)
        </div>

        <div class="input">
            @Html.LabelFor(m => m.Address)<br />
            @Html.TextBoxFor(m => m.Address, new { @class = "formControl sm" })
            @Html.ValidationMessageFor(m => m.Address)
        </div>

        <div class="input">
            @Html.LabelFor(m => m.Password)<br />
            @Html.PasswordFor(m => m.Password, new { @class = "formControl sm" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="input">
            @Html.LabelFor(m => m.ConfirmPassword)<br />
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "formControl sm" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        @Html.ValidationSummary(true)
        <br />
        <input type="submit" value="Регистрация" class="btn btn-md btn-primary" />
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
